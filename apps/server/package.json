{
  "name": "@ica/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts",
    "test": "bun run src/test/runner.ts",
    "test:health": "bun run src/test/health-check.ts",
    "test:ci": "TEST_BASE_URL=http://localhost:3001 TEST_WS_URL=ws://localhost:3001 bun run src/test/runner.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/trpc-server": "^0.4.2",
    "@ica/shared": "workspace:*",
    "@trpc/server": "^11.8.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "jose": "^6.0.11",
    "postgres": "^3.4.8",
    "redis": "^5.10.0",
    "resend": "^6.8.0",
    "socket.io": "^4.8.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@ica/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/node": "^25.0.9",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "socket.io-client": "^4.8.3",
    "typescript": "^5.9.3"
  }
}
